<h2>Редактирование <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>В настоящее время ожидается подтверждение для:
      <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, "Новый пароль",  class: "form-label fw-bold" %> <i></i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em>Минимум <%= @minimum_password_length %> символов</em>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Подтверждение пароля",  class: "form-label fw-bold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, "Старый пароль",  class: "form-label fw-bold" %>
    <i>(нам нужен текущий пароль, чтобы подтвердить изменения)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Удалить мой аккаунт</h3>

<p>Не нравится? <%= button_to "Удалить пользователя", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Вернуться", :back,  class: "nav-link px-0 py-0" %>